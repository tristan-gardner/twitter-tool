<CustButton@Button>:
	background_color: 0,.5, 1, 1
	font_size: 26

<SearchBoxLayout>:
	canvas.before:
		Color:
			rgba: 0, .5, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
	orientation: "horizontal"
	id: search
	display: entry
	spacing: 10
	padding: 10
	
	BoxLayout:
		orientation: "vertical"
		size_hint_x: None
		width: 200
		CustButton:
			text: "Search Term"
		CustButton:
			text: ""
			background_color: 1, 1, 1, 0
		CustButton:
			text: "Min Followers"
		CustButton:
			text: ""
			background_color: .9, .9, .9, 0
		CustButton:
			text: "Hashtag"
		CustButton:
			text: ""
			background_color: .9, .9, .9, 0
		CustButton:
			text: "Recurrence of #"
		CustButton:
			text: ""
			background_color: .9, .9, .9, 0
		CustButton:
			font_size: 12
			text: "Tweets to scan (1 = 20 tweets)"
		CustButton:
			text: ""
			background_color: .9, .9, .9, 0
		CustButton:
			font_size: 12
			text: "Max number of Members"
		CustButton:
			text: ""
			background_color: .9, .9, .9, 0
		CustButton:
			text: "Search"
			background_down: '00089.png'
			on_press: search.search(entry.text, followerentry.text, memberEntry.text)
			size_hint: .9,.7
	
	BoxLayout:
		id: box
		orientation: "vertical"
		TextInput:
			id: entry
			font_size: 32
			multi_line: False
		TextInput:
			id: followerentry
			font_size: 32
			multi_line: False
		TextInput:
			id: hashtagEntry
			font_size: 32
			multi_line: False
		TextInput:
			id: recurrenceEntry
			font_size: 32
			multi_line: False
		TextInput:
			id: tweetSetEntry
			font_size: 32
			multi_line: False
		TextInput:
			id: memberEntry
			font_size: 32
			multi_line: False
		CustButton:
			text: "AdvancedSearch"
			pos: 10, 10
			background_down: '00089.png'
			on_press: search.advancedSearch(entry.text, followerentry.text, hashtagEntry.text, recurrenceEntry.text, tweetSetEntry.text, memberEntry.text)
			size_hint: .47, .35

	CustButton:
		pos_hint: {"right": 1, "top": 1}
		background_color: .9, .9, .9, 0
		size_hint: 1, .3
		font_size: 14
		size_hint_x: None
		width: 100
		text: "IMPORTANT: \n Advanced Search \n Enter all feilds \n Basic Search \n Enter 1,2,6"

